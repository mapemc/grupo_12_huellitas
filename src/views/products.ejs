<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs", {cssSheet:"styleProducts", title:"Todos los productos"}) %>
</head>

<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>

    <!-- todos los productos -->
	<div>
		<h2 class="products-title">Todos los productos</h2>
	</div>

    <div class="container-products">
		<div class="row">
			
			<% products.forEach(product =>{ %>
				<div class= "box">
					<a href="/products/detail/<%= product.id %>">
						<div class="product-box_image">
							<img src="/img/<%= product.image %>" alt="imagen de producto">
						</div>
						<article class="product-box_data">
							<h2 class="price-product"> <%= product.price %></h2>
							<h1 class="name-product"><%= product.name %></h1>
							<h3 class="category-product">Categoria: <%= product.category %></h3>
						</article>
					</a>
				</div>
				
			<% }); %>
		
		</div>
	</div>
	<!-- /todos los productos -->


    <footer>
        <%- include('partials/footer.ejs') %>
    </footer>

</body>
</html>
