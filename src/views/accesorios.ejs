<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/head.ejs", {cssSheet:"styleProducts", title:"Accesorios"}) %>
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

</head>

<body>
    <header>
        <%- include('partials/header.ejs') %>
    </header>

    <!-- todos los productos -->
	<div class="encabezado-catalogo">
		<img src="/img/imgCatalogo.jpeg" alt="imagen-catalogo" class="img-catalogo">
		<div class="text-overlay">ACCESORIOS </div>
		<!-- <h2 class="products-title"></h2> -->
	</div>

	<% if (!isAdmin && !isRegistered) { %> 
		<div class="banner">
			<div class="text-left">
				<p>¡Ingresa para comenzar tu compra!</p>
			</div>
			<button onclick="window.location.href='/users/login'" class="btn-nonregister">INGRESAR</button>
		</div>
	<% } else if(isRegistered){ %> 

		<div class="banner">
			<span class="material-symbols-outlined" style="font-size: 80px;"> pets </span>
			<div class="text-left">
				<p>¡Hola <%= user.username.toUpperCase() %> !</p>
				<p>Elegí lo mejor para tu mascota</p>
			</div>
		</div>

	<%} else if(isAdmin){  %> 
		<div class="banner">
			<div class="text-left">
				<p>NUEVO PRODUCTO</p>
			</div>
			<button onclick="window.location.href='/products/create'" class="btn-admin">CREAR</button>
		</div>
	<% } %> 


    <div class="container-products">
		<div class="row">
			
			<% accesorios.forEach(product =>{ %>
				<div class= "box">
					<a href="/products/detail/<%= product.id %>">
						<div class="product-box_image">
							<img src="/img/<%= product.photo %>" alt="imagen de producto">
						</div>
					</a>	
						<article class="product-box_data">
							<a href="/products/detail/<%= product.id %>" gitstyle="text-decoration: none;"></a>  
							<h2 class="price-product"> $ <%= product.price %></h2>
							<h1 class="name-product"><%= product.name %></h1>
							<h3 class="category-product">Categoria: <%= product.category %></h3>
						</article>
					
				</div>
				
			<% }); %>
		
		</div>
	</div>
	<!-- /todos los productos -->
	<div>
		<img src="/img/banners/banner_envios.png" alt="imagen-envios" class="img-envios">
	</div>

    <footer>
        <%- include('partials/footer.ejs') %>
    </footer>

</body>
</html>
