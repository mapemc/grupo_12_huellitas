                    <form id="deleteForm" action="/products/delete/<%= product.id %>?_method=DELETE" method="POST">
                        <button class="boton-enviar" type="button" onclick="confirmarEliminar()">
                            <span>ELIMINAR</span>
                        </button>
                    </form>
                </div>

            </section>
